<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="com/jin/database/db.properties"></properties>
	<typeAliases>
		<typeAlias type="com.jin.model.MemberDTO" alias="Member" />
		<typeAlias type="com.jin.model.StoreDTO" alias="Store"/>
		<typeAlias type="com.jin.model.LaundryDTO" alias="Laundry"/>
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${user}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/jin/database/MemberMapper.xml" />
		<mapper resource="com/jin/database/userMapper.xml" />
	</mappers>
</configuration>